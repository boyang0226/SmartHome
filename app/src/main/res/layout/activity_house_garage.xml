<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_house_garage_fragment"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.bo.smarthome.Housegarage">

<TextView

    android:text="@string/GarageDoor"
    android:textSize="30sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/house_frag_garage"
    android:layout_marginTop="69dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

<Switch

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/house_garage_swith"

    android:layout_marginStart="47dp"
    android:layout_alignTop="@+id/house_frag_garage"
    android:layout_toEndOf="@+id/house_frag_garage" />

<TextView
    android:text="@string/garageLight"
    android:textSize="30sp"
    android:id="@+id/house_garage_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/house_garage_swith2"
    android:layout_toStartOf="@+id/house_garage_swith" />

<Switch

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/house_garage_swith2"
    android:layout_marginTop="96dp"
    android:layout_below="@+id/house_frag_garage"
    android:layout_alignStart="@+id/house_garage_swith" />

    <Button
        android:id="@+id/house_garage_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="@string/house_Save"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/house_garage_swith2" />


</RelativeLayout>
