<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_garage_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

     tools:context="com.example.bo.smarthome.Housegarage"
    >




    <GridLayout

        android:id="@+id/house_garage_gradlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >

        <TextView

            android:id="@+id/house_frag_garage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="@string/house_garagedoor"
            android:textSize="30sp"
            />

        <Switch
            android:id="@+id/house_garage_swith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />



    <ImageView
        android:id="@+id/housedoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_below="@+id/house_garage_gradlayout"
        android:layout_marginBottom="20dp"
        android:layout_columnSpan="2"
        />








        <TextView
            android:id="@+id/house_garage_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/garageLight"
            android:textSize="30sp"
            android:layout_marginEnd="30dp"


            />

        <Switch

            android:id="@+id/house_garage_swith2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />




    <ImageView
        android:id="@+id/houselight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_columnSpan="2"

        />

    </GridLayout>

    <Button
        android:id="@+id/house_garage_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="@string/house_Save" />


</RelativeLayout>
