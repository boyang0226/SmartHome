<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/auto_TemperatureEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="186dp"
        android:ems="10"
        android:hint="@string/auto_temperature_edittext_hint"
        android:inputType="numberDecimal"
        android:text="" />

    <Button
        android:id="@+id/auto_TemperatureSetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/auto_TemperatureEditText"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/auto_TemperatureEditText"
        android:text="@string/auto_temperature_setbutton" />

    <TextView
        android:id="@+id/auto_Teperature_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/auto_TemperatureSetButton"
        android:layout_alignStart="@+id/auto_TemperatureEditText"
        android:layout_marginBottom="16dp"
        android:text="@string/auto_temperature_textview"
        android:textSize="20dp" />
</RelativeLayout>