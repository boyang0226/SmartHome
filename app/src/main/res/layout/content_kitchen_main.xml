<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kitchen_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="2dp"
    android:gravity="center|bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bo.smarthome.KitchenMain"
    tools:showIn="@layout/activity_kitchen_main"
    android:layout_marginBottom="0dp">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/lvKitchenAppliance" />

    <Button
        android:text="@string/button_add_appliance_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/lvKitchenAppliance"
        android:layout_marginTop="451dp"
        android:id="@+id/btnKitchenMainAdd"
        android:gravity="center_vertical|center_horizontal|fill_horizontal|fill"
        android:textAlignment="center"
        android:layout_below="@+id/lvKitchenAppliance" />
</RelativeLayout>
