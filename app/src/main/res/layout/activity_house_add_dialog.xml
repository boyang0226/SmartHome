<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="100dp"
    android:minWidth="150dp"
    >


    <EditText
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/house_temp"

        android:layout_marginTop="76dp"
        android:layout_below="@+id/house_temp_hold"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/house_changetemprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/house_temp_hold"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/house_temp_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/house_Save"

        android:layout_below="@+id/house_temp"

        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/house_temp_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/house_delete"
        android:layout_below="@+id/house_temp"
        android:layout_alignParentRight="true" />


</RelativeLayout>
