<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/auto_gps_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="134dp"
        android:text="@string/auto_gps_textview"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/auto_gps_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auto_gps_textView"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/auto_gps_edittext_hint"
        android:text="" />

    <Button
        android:id="@+id/auto_gps_setbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_gps_setbutton"
        android:layout_alignTop="@+id/auto_gps_editText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp" />
</RelativeLayout>