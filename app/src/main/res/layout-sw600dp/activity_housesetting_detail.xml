<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_housesetting_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bo.smarthome.HousesettingDetail">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#1caee5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/house_listview"
        android:layout_below="@+id/toolbar"/>

    <FrameLayout
        android:id="@+id/house_fragholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_toEndOf="@id/house_listview"
        android:background="@android:color/holo_blue_bright">


    </FrameLayout>


</RelativeLayout>
